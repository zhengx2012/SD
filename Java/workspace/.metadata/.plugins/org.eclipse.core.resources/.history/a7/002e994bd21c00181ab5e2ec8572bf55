package drills;

public class CalculateTemp {

	public static void main(String[] args) {
		calculateTemp(80, 'F');

	}

	public static double calculateTemp(double temp, char value) {
		double newTemp = 0;

		if (value == 'F') {
			newTemp = (temp - 32) / 1.8;
		} else if (value == 'C') {
			newTemp = (temp * 1.8) + 32;
		} else {
			System.out.println("Please enter correct characters.");
		}
		return newTemp;

	}

}
